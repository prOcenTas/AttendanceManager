<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivitys.ProfileAdmin">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="6.00dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/toolbar_back"
                android:layout_width="45.00dp"
                android:layout_height="45.00dp"
                android:layout_gravity="center"
                android:padding="10.00dp"
                android:src="@drawable/ic_arrow"
                app:tint="#222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.00dp"
                android:layout_weight="1"
                android:fontFamily="@font/p_semibold"
                android:text="Profile"
                android:textColor="@color/text4"
                android:textSize="17.00sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.00dp"
                android:layout_weight="2"

                android:backgroundTint="@color/background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20.00dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:elevation="12dp"
                    android:id="@+id/view1"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/img_doge"
                        android:background="@drawable/bg_bottombar_content_15"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/namePassed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="13.00dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/p_semibold"
                    android:text="NAME"
                    android:textColor="@color/text4"
                    android:textSize="25.00sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.00dp"
                android:layout_weight="2"

                android:backgroundTint="@color/background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20.00dp">


                <TextView
                    android:id="@+id/phonePassed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="13.00dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/p_semibold"
                    android:text="PHONE NUMBER"
                    android:textColor="@color/text4"
                    android:textSize="25.00sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.00dp"
                android:layout_weight="2"

                android:backgroundTint="@color/background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20.00dp">


                <TextView
                    android:id="@+id/typePassed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="13.00dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/p_semibold"
                    android:text="TYPE"
                    android:textColor="@color/text4"
                    android:textSize="25.00sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="95dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:onClick="signOut"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.00dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:backgroundTint="#D60909"
                android:orientation="vertical"
                android:padding="15.00dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/p_medium"
                    android:text="Sign Out"
                    android:textColor="@color/background"
                    android:textSize="17.00sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.00dp"
            android:layout_marginTop="0.00dp"
            android:layout_marginRight="10.00dp"
            android:layout_marginBottom="10.00dp"
            android:background="@drawable/bg_bottombar_content_15"
            android:backgroundTint="#ffffff"
            android:orientation="vertical"
            android:padding="8.00dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/p_reguler"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineHeight="15.00dp"
                android:text="Please dont sing-out, or else..."
                android:textColor="@color/text3"
                android:textSize="11.00sp" />

        </LinearLayout>





    </LinearLayout>



</RelativeLayout>