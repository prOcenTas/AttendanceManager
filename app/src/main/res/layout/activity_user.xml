<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".UserActivitys.TeacherActivitys.UserActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="15.00dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="37.00dp"
                android:adjustViewBounds="true"
                android:alpha="1"
                android:src="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.00dp"
                android:layout_marginRight="5.00dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/p_reguler"
                        android:gravity="center"
                        android:text="Hello "
                        android:textColor="@color/text4"
                        android:textSize="16.00sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/welcmUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/p_reguler"
                        android:gravity="center"
                        android:text="NAME"
                        android:textColor="@color/text4"
                        android:textSize="16.00sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/p_reguler"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text4"
                        android:textSize="16.00sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/p_reguler"
                    android:gravity="right"
                    android:text="See your profile"
                    android:textColor="@color/text4"
                    android:textSize="14.00sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="37.00dp"
                android:layout_height="37.00dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15.00dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bottombar_content_15"
                        app:cardCornerRadius="25.00dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ADSbutton"
                                android:onClick="algorithm"
                                android:layout_width="match_parent"
                                android:layout_height="200.00dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_algo" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:alpha="0.8"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:backgroundTint="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="10.00dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity=""
                                    android:layout_marginLeft="15.00dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10.00dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/p_reguler"
                                            android:text="Algorithm"
                                            android:textColor="@color/background"
                                            android:textSize="13.00dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bottombar_content_15"
                        app:cardCornerRadius="25.00dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:onClick="android"
                                android:id="@+id/ANDbutton"
                                android:layout_width="match_parent"
                                android:layout_height="200.00dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_and" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:alpha="0.8"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:backgroundTint="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="7.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity=""
                                    android:layout_marginLeft="15.00dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10.00dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/p_reguler"
                                            android:text="Android Development"
                                            android:textColor="@color/background"
                                            android:textSize="13.00dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.00dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bottombar_content_15"
                        app:cardCornerRadius="25.00dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:onClick="dataWarehousing"
                                android:id="@+id/DAIbutton"
                                android:layout_width="match_parent"
                                android:layout_height="200.00dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_dw" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:alpha="0.8"

                                android:background="@drawable/bg_bottombar_content_15"
                                android:backgroundTint="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="10.00dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity=""
                                    android:layout_marginLeft="15.00dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10.00dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/p_reguler"
                                            android:text="Data Warehousing"
                                            android:textColor="@color/background"
                                            android:textSize="13.00dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bottombar_content_15"
                        app:cardCornerRadius="25.00dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:onClick="embedded"
                                android:id="@+id/ESWbutton"
                                android:layout_width="match_parent"
                                android:layout_height="200.00dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_es" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:alpha="0.8"
                                android:background="@drawable/bg_bottombar_content_15"
                                android:backgroundTint="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="10.00dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity=""
                                    android:layout_marginLeft="15.00dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10.00dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/p_reguler"
                                            android:text="Embedded Systems"
                                            android:textColor="@color/background"
                                            android:textSize="15.00dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
